<resources>
    <!-- Base application theme. -->
    <style name="Theme.Afterpay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/backgroundSecondary</item>
        <item name="toolbarStyle">@style/Afterpay.Toolbar</item>
        <item name="textAppearanceTitle">@style/Afterpay.TextAppearance.Title</item>
        <item name="textAppearanceBody">@style/Afterpay.TextAppearance.Body</item>
        <item name="cardViewStyle">@style/Afterpay.CardView</item>
        <item name="drawerArrowStyle">@style/ToolbarArrowToggleStyle</item>
    </style>

    <style name="ToolbarArrowToggleStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="Afterpay.Toolbar" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/backgroundBrand</item>
        <item name="titleTextColor">@color/textReversed</item>
        <item name="titleTextAppearance">@style/Afterpay.Toolbar.TextAppearance</item>

    </style>

    <style name="Afterpay.Toolbar.TextAppearance" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/textReversed</item>
    </style>

    <style name="Afterpay.TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="Afterpay.TextAppearance.Body" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">@dimen/body_text_size</item>
    </style>

    <style name="Afterpay.CardView" parent="CardView">
        <item name="cardBackgroundColor">@color/cardBackground</item>
        <item name="cardCornerRadius">8dp</item>
    </style>
</resources>